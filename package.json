{
  "name": "express-nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Express boilerplate with hot reload using Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "ngrok": "ngrok http 3000",
    "ngrok:subdomain": "ngrok http 3000 --subdomain",
    "tunnel": "./scripts/ngrok-helper.sh"
  },
  "keywords": [
    "express",
    "nodejs",
    "typescript",
    "hot-reload"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "googleapis": "^150.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
